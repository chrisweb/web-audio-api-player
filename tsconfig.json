{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "declarationDir": "dist",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "skipDefaultLibCheck": true,
        "removeComments": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2016"
        ],
        "target": "es2016"
    },
    "exclude": [
        "node_modules",
        "examples",
        "scripts",
        "dist"
    ]
}